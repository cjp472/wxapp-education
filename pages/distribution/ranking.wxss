/* tab选项卡 */
.title{
  position: fixed;
  top:0;
  width: 100%;
  height: 100rpx;
  z-index: 99;
  background: #fff;
  display: flex;
  flex-direction: row;
}
.title-item{
   width:50%; 
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
}
.on{
  color:#028ce5;
  border-bottom:4rpx solid #028ce5;
}

/* 排行榜列表 */
.ranking-list{
  margin-top: 100rpx;
  background-color: #fff;
}
.ranking-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:10rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.item-info{
  display: flex;
  flex-direction: row;
}
.item-index{
  margin-right: 10rpx;
  margin-top: 10rpx;
  /* padding:20rpx; */
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 60rpx;
  text-align: center;
  vertical-align:middle;
  color: #fff;
  background-color: #028ce5;
  border-radius: 10rpx;
}
.item-info image{
  width: 60rpx;
  vertical-align:middle;
}
.item-info text{
  margin-left: 20rpx;
  font-size: 30rpx;
}
.item-cont{
  font-size: 26rpx;
}
/* pages/distribution/commission.wxss */
.withdraw-total{
  display: flex;
  flex-direction: row;
  height: 250rpx;
  background: #028ce5;
  color:#fff;
}
.withdraw-box{
  width:75%;
  display: flex;
  flex-direction: column;
}
.withdraw-text{
  padding: 30rpx;
  font-size: 26rpx;
}
.withdraw-num{
  margin-left: 30rpx;
  font-size: 80rpx;
}
.withdraw-btn{
  width:25%;
  height: 250rpx;
  line-height: 250rpx;
}
.withdraw-btn text{
  padding: 20rpx 40rpx;
  background-color: #62b900;
  border-radius: 10rpx;
}

.commission-list{
  margin-top: 10rpx;
  background-color: #fff;
}
.commission-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:20rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.team-header{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  padding:20rpx;
  height: 150rpx;
  line-height: 150rpx;
  background: #00c3c9;
  color:#fff;
}
.header-info image{
  width: 100rpx;
  vertical-align:middle;
  border-radius: 50%;
}
.header-info text{
  margin-left: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.team-num{
  font-size: 28rpx;
}

.team-list{
  margin-top: 10rpx;
  background-color: #fff;
}
.team-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:20rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.team-item-num{
  font-size: 30rpx;
}
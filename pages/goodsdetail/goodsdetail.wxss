} 

.goods-info{
  display: flex;
  flex-direction: row;
}
.goods-info image{
  margin: 0 15rpx;
  width: 200rpx;
}
.goods-info-text{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}
.goods-info-name{
  padding-right: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
}
.goods-info-residue{
  font-size: 26rpx;
}
.goods-num{
  margin-left:170rpx;

/* 商品主图 */
.mainImg-box{
  /* width: 100%; */
  height: 750rpx;
}
.mainImg-item{
  width:100%;
}
.mainImg-item image{
  width: 100%;
}
/* 秒杀 */
.spike-box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:15rpx 20rpx;
  height: 100rpx;
  background: #00c3c9;
  color:#fff;
}
.spike{
  display: flex;
  flex-direction: row;
  line-height: 100rpx;
}
.userPrice{
  font-size: 60rpx;
}
.marketPrice{
  font-size: 28rpx;
  margin-left: 20rpx;
  text-decoration: line-through;
}
.marketing{
  display: flex;
  flex-direction: column;
  text-align: center;
  line-height: 50rpx;
}
.marketing-title{
  font-size: 30rpx;
}
.marketing-cond{
  font-size: 35rpx;
}
/* 商品名称和价格 */
.goods-cont{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:15rpx 20rpx;
  height: 130rpx;
  background-color: #fff;
  border-top: 1rpx solid #f5f5f5;
}
.goods-cont-name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
}
.goods-cont-price{
  font-size: 34rpx;
}


.level-text{
  margin-top: 20rpx;
  padding:20rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}
.level-text image{
  width:30rpx;
}

/* 一元圆梦*/
.one-buy{
  margin-top:20rpx;
  padding:20rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.one-buy image{
  width: 100rpx;
  border-radius: 50%;
}
.one-buy text{
  margin:5rpx 0;
}
.one-buy-title{
  text-align: center;
  font-size: 35rpx;
  font-weight: bold;
  color: #b9b30c;
}
.one-buy-user,
.one-buy-num{
  font-size: 28rpx;
}
.one-buy-participateNum,
.one-buy-time{
  font-size: 26rpx;
}


/* 商品详情图 */
.goods-detail{
  margin-top: 20rpx;
  padding-bottom:100rpx;
}
.goods-detail text{
  display: block;
  padding:20rpx 0;
  width: 100%;
  text-align: center;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}
.detail-image{
  display: flex;
  flex-direction: column;
  padding-bottom: 80rpx;
}
.goods-detail image{
  width: 100%;
}
/* 底部购物车 */
 .goodsdetail-ooter{
  position: fixed;
  bottom:0;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  text-align: center;
  background-color: #dedede;
  z-index: 98rpx;
  border-top: solid 2rpx #dedede;
}
 .shopcar-btn{
  position: relative;
  width: 150rpx;
}
.shopcar-btn image{
  width: 50rpx;
  position: relative;
  top: 2rpx;
}

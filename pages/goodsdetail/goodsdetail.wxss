  position: absolute;
  right:24rpx;
  top: 20rpx;
  width: 40rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 45%;
  background-color: #ea2626;
} 
.shopcar-color{
  background: #fff;
}
.shopcar-num1{
  display:block;
  position:relative;
  top:-68rpx;
  align-content: center;
  font-size:24rpx;
  color: #999999;
}
.shopcar-num2{
  left: 44rpx;
}
.shopcar-ki{
  margin-right:2rpx;
}
.shop-btn{
  width:500rpx;
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
  color:#fff;
}
.shop-btn text{
  width: 50%;
}
.add-shopcat{
  background-color: #fccdbd;
}
.buy-now{
  width: 50%;
  color:#fff;
  background-color: #eb3e02;
  border-radius:0%;
  /*font-size: 40rpx;*/
}




/*一元圆梦*/ 
.drawer_screen { 
 width: 100%; 
 height: 100%; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 98; 
 background: #000; 
 opacity: 0.5; 
 overflow: hidden; 
} 
 
/*content*/ 
.drawer_box { 
 width: 650rpx; 
 overflow: hidden; 
 position: fixed; 
 top: 50%; 
 left: 0; 
 margin: -150px 50rpx 0 50rpx; 
 background: #FAFAFA; 
 border-radius: 3px; 
 z-index: 99; 
} 
 
.drawer_title{ 
 padding:15px; 
 font: 20px "microsoft yahei"; 
 text-align: center; 
} 
.drawer_content { 
 /* height: 210px;  */
 overflow-y: scroll; /*超出父盒子高度可滚动*/ 
} 
.drawer_btn{
margin-top:10rpx;
display: flex;
flex-direction: row;
text-align: center; 
border-top: 1px solid #E8E8EA; 
}
.drawer_btn view{
 width: 50%;
 padding: 20rpx; 
}
.btn_cancel{ 
 color: #3CC51F; 
} 
 .btn_ok{ 
  background-color: #ea2626;
  color: #fff; 
} 
.top{ 
 padding-top:8px; 
} 
.bottom { 

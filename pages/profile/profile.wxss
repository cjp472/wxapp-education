page{
  background-color: #fff;
}
/*用户信息*/
.user-info{
  width:100%;
  height: 250rpx;
  background: #00c3c9;
  text-align: center;
  color:#fff;
}
.user-img{
  margin-top: 15rpx;
  width:150rpx;
  border-radius: 50%;
}
.user-info text{
  display: block;
  margin-top: 15rpx;
  font-size: 30rpx;
}
.setting{
  width: 200rpx;
  margin:0 auto;
  margin-top: 10rpx;
  font-size: 30rpx;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
}
/*功能列表*/
.func-list{
  width:100%;
  border-top: 10rpx solid #f5f5f5;
}
.func-list .func-item{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom:3rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
}

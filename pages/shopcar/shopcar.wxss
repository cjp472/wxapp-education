
/* 购物车为空 */
.empty{
  position: fixed;
  top:30%;
  width:100%;
  text-align: center;
}
.empty image{
  width:50%;
}
.empty text{
  display: block;
  font-size: 28rpx;
  color: #6b6b6b;
}

.goods-container{
  position: relative;
  width: 100%;
  height: 180rpx;
  border-bottom:2rpx solid #f5f5f5;
  /* margin-bottom: 100rpx; */
}
.goods-container:last-child{
  margin-bottom: 100rpx;
}
.good-detail{
  position: absolute; 
  display: flex;
  flex-direction: row;
  padding:20rpx 0;
  width: 100%;
  height: 140rpx;
  background: #fff;
  z-index: 3;
  -webkit-transition: margin-left 0.3s ease;
}
.good-detail icon{
  margin-top: 50rpx; 
  margin-left: 20rpx;
}
.good-image{
  margin-left: 20rpx;
  width:190rpx;
}
.good-text{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}
.good-title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
  font-size: 30rpx;
}
.good-bottom{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
}
.good-price{
  font-size: 28rpx;
}
.user-price{
  margin-left: 10rpx;
  text-decoration: line-through;
}
.good-num{
  display: flex;
  flex-direction: row;
  margin-right: 50rpx;
  width:180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border:1rpx solid #ccc;
  border-radius: 6rpx;
}
.good-num input{
  width: 70rpx;
  height: 60rpx;
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  font-size: 28rpx;
}
.good-num text{
  width: 55rpx;
  font-size: 40rpx;
  line-height: 55rpx;
  /* font-weight: bold; */
}
.failType{
  position: absolute;
  left: 70rpx;
  top: 60rpx;
  font-size: 50rpx;
  font-weight: bold;
  -webkit-transform:rotate(45deg);
}
.del-btn{
  position: absolute;
  top:0;
  right: 0;
  height: 178rpx;
  width: 100rpx;
  line-height: 178rpx;
  text-align: center;
  color:#fff;
  font-size: 30rpx;
  background: #f83131;
  z-index: 0;
}

/* 底部结算 */
.footer{
  position: fixed;
  bottom:0;
  width:100%;
  height:100rpx;
  background-color: #fff;
  border-top:1rpx solid #e5e5e5;
  z-index: 99;
}
.allgoods-ckb{
  margin-top: 26rpx;
  margin-left: 20rpx; 
}
.allgoods-ckb icon{
  vertical-align:middle;
}
.allgoods-ckb text{
  /* position: absolute;
  left: 70rpx;
  top: 36rpx; */
  margin-left: 5rpx;
  font-size: 26rpx;
}
.settlement{
  position: absolute;
  right: 0;
  top:0;
}
.settlement view{
  display: inline-block;
}
.allPrice{
  margin-right: 15rpx;
  height: 100rpx;
  font-size: 30rpx;
}
.allPrice text{
  font-size: 26rpx;
  color:#fa5353;
}
.setlBtn{
  width:200rpx;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  color:#fff;
  background-color: #f83131;
}
.setlBtn:hover{
  background-color: #ec2323;
}
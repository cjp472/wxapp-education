page{
  background-color: #fff;
}
.goods-item{
  position: relative;  
  display: flex;
  flex-direction: row;
  margin:20rpx 30rpx;
  box-shadow:0 0 20rpx #d9d9d9;  
}
  .click{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  z-index: 2;
}  
.goods-item image{
  padding:15rpx; 
  width: 150rpx;
}
 .goods-text{
  display: flex;
  flex-direction: column;
   width: 450rpx; 
  padding: 10rpx; 
} 
.goods-text text{
  padding: 7rpx;
}
 .goods-name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
} 
.offer-price{
  font-size: 34rpx;
}
.goods-price{
  font-size: 28rpx;
  text-decoration: line-through;
}
.goods-num,
.secKillTime{
  font-size: 26rpx;
}
 .buy-btn{
  display: block;
  width: 150rpx;

  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  font-size: 28rpx;
  color:#fff;
  border-radius: 7rpx;
  z-index: 3;
} 